---
    const { image } = Astro.props;
---

<div class="item-gd-carousel hidden">
    <div class="img-projet-gd-carousel max-h-gd-carousel flex items-center py-8">
        <img class="border-4 border-black max-w-96 h-48 mx-auto" src=`${image.frontmatter.image.url}` alt=`${image.frontmatter.image.alt}`/>
    </div>
    <div class="infos-projet-gd-carousel py-4 border-b-4 border-black">
        <div class="header-projet-gd-carousel grid grid-cols-4 gap-4 font-headings mb-4">
            <h3 class="titre-projet text-center lg:text-left col-span-full lg:col-span-1 font-semibold text-2xl !my-auto">{image.frontmatter.titre}</h3>
            <p class="text-base col-start-2 lg:col-span-2 lg:col-start-2 text-right lg:text-center !my-auto">{image.frontmatter.auteur}</p>
            <p class="text-base text-left lg:text-right !my-auto">{image.frontmatter.date}</p>
        </div>
        <div class="description-projet-gd-carousel h-32 overflow-hidden">
            <Fragment set:html={ image.compiledContent() } />
        </div>
    </div>
</div>