---
    const { print } = Astro.props;
---

<div class="flex flex-col bloc-zine mb-8 border-black border-b-4 max-w-[500px] mx-auto">
    <img class="w-full" src=`${ print.frontmatter.image.url }` alt=`${ print.frontmatter.image.alt }` />
    <h2 class="font-headings text-xl sm:text-2xl font-bold my-4">{ print.frontmatter.titre }</h2>
    <div class="w-full flex flex-row-reverse items-start sm:flex-none sm:block">
        <div class="font-headings text-base sm:text-lg flex flex-1 flex-col sm:flex-row mb-1">
            <p class="flex-grow text-right sm:text-left !mb-0 sm:mb-4">{ print.frontmatter.auteur }</p>
            <p class="flex-shrink text-right">{ print.frontmatter.date }</p>
        </div>
        <p>{ print.frontmatter.description }<br/>
        { print.frontmatter.taille }</p>
    </div>
</div>